{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "paths": {
            "nuclui": ["./"],
            "nuclui/*": ["./src/*"],
            "@components": ["./src/components"],
            "@components/*": ["./src/components/*"],
            "@utils": ["./src/utils"],
            "@utils/*": ["./src/utils/*"],
            "@config": ["./src/config"],
            "@config/*": ["./src/config/*"],
            "@theme": ["./src/theme"],
            "@theme/*": ["./src/theme/*"],
            "@fonts": ["./src/fonts"],
            "@fonts/*": ["./src/fonts/*"],
            "@hooks": ["./src/hooks"],
            "@hooks/*": ["./src/hooks/*"],
            "@styles": ["./src/styles"],
            "@styles/*": ["./src/styles/*"]
        }
    },
    "include": [".", "../src/types"],
    "exclude": ["./**/*.test.tsx", "./**/*.test.ts"]
}
