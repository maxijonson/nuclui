{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "paths": {
            "nuclui": ["./"],
            "nuclui/*": ["./src/*"],
            "@components": ["./src/components"],
            "@components/*": ["./src/components/*"],
            "@utils": ["./src/utils"],
            "@utils/*": ["./src/utils/*"],
            "@config": ["./src/config"],
            "@config/*": ["./src/config/*"]
        }
    },
    "include": ["."],
    "exclude": ["./**/*.test.tsx", "./**/*.test.ts"]
}
